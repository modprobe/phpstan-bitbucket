{
    "name": "alxt/phpstan-bitbucket",
    "type": "phpstan-extension",
    "description": "PHPStan error formatter for Bitbucket Pipeline Reports",
    "keywords": [
        "phpstan",
        "error-formatter",
        "bitbucket",
        "pipeline",
        "reports",
        "testing"
    ],
    "homepage": "https://github.com/modprobe/phpstan-bitbucket",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Timmermann",
            "email": "alex@timmermann.me"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0",
        "phpstan/phpstan": "^1.0",
        "ramsey/uuid": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Alxt\\PHPStan\\ErrorFormatter\\": "src"
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
